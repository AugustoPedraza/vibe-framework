{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "File Lock",
  "description": "File ownership locks to prevent merge conflicts during parallel implementation. Each stream owns exclusive paths and cannot modify files outside their ownership.",
  "type": "object",
  "required": ["feature_id", "streams", "created_at"],
  "properties": {
    "feature_id": {
      "type": "string",
      "description": "Feature identifier (e.g., AUTH-001)",
      "pattern": "^[A-Z]+-[0-9]+$"
    },
    "contract_version": {
      "type": "integer",
      "description": "Version of the interface contract this lock is based on"
    },
    "streams": {
      "type": "object",
      "description": "Lock information per stream",
      "properties": {
        "backend": {
          "$ref": "#/$defs/stream_lock"
        },
        "frontend": {
          "$ref": "#/$defs/stream_lock"
        },
        "integration": {
          "$ref": "#/$defs/stream_lock"
        }
      },
      "required": ["backend", "frontend"]
    },
    "active_phase": {
      "type": "string",
      "enum": ["parallel", "integration", "complete"],
      "description": "Current implementation phase"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "$defs": {
    "stream_lock": {
      "type": "object",
      "description": "Lock state for a single stream",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["idle", "active", "complete", "blocked"],
          "description": "Current stream status"
        },
        "agent_id": {
          "type": "string",
          "description": "ID of agent holding the lock (if active)"
        },
        "owned_paths": {
          "type": "array",
          "description": "Glob patterns for paths this stream exclusively owns",
          "items": {
            "type": "string"
          }
        },
        "files_modified": {
          "type": "array",
          "description": "Files actually modified by this stream",
          "items": {
            "type": "object",
            "properties": {
              "path": { "type": "string" },
              "action": {
                "type": "string",
                "enum": ["created", "modified", "deleted"]
              },
              "timestamp": { "type": "string", "format": "date-time" }
            }
          }
        },
        "acquired_at": {
          "type": "string",
          "format": "date-time",
          "description": "When lock was acquired"
        },
        "released_at": {
          "type": "string",
          "format": "date-time",
          "description": "When lock was released"
        },
        "timeout_at": {
          "type": "string",
          "format": "date-time",
          "description": "When lock expires if not released"
        }
      }
    }
  },
  "example": {
    "feature_id": "AUTH-001",
    "contract_version": 1,
    "streams": {
      "backend": {
        "status": "active",
        "agent_id": "backend-agent-abc123",
        "owned_paths": [
          "lib/accounts/",
          "test/accounts/"
        ],
        "files_modified": [
          { "path": "lib/accounts/resources/user.ex", "action": "created", "timestamp": "2026-01-23T10:15:00Z" },
          { "path": "test/accounts/user_test.exs", "action": "created", "timestamp": "2026-01-23T10:20:00Z" }
        ],
        "acquired_at": "2026-01-23T10:00:00Z",
        "timeout_at": "2026-01-23T12:00:00Z"
      },
      "frontend": {
        "status": "active",
        "agent_id": "frontend-agent-def456",
        "owned_paths": [
          "assets/svelte/components/features/auth/",
          "assets/svelte/stores/auth.ts"
        ],
        "files_modified": [
          { "path": "assets/svelte/components/features/auth/LoginForm.svelte", "action": "created", "timestamp": "2026-01-23T10:10:00Z" }
        ],
        "acquired_at": "2026-01-23T10:00:00Z",
        "timeout_at": "2026-01-23T12:00:00Z"
      },
      "integration": {
        "status": "idle",
        "owned_paths": [
          "lib/my_app_web/live/auth/",
          "test/my_app_web/live/auth/",
          "assets/tests/e2e/auth/"
        ],
        "files_modified": []
      }
    },
    "active_phase": "parallel",
    "created_at": "2026-01-23T10:00:00Z",
    "updated_at": "2026-01-23T10:20:00Z"
  }
}
