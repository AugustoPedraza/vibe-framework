{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Vibe Feature Checkpoint",
  "description": "Persisted state for resuming feature implementation across sessions",
  "type": "object",
  "required": ["feature_id", "current_phase", "created_at", "updated_at"],
  "properties": {
    "feature_id": {
      "type": "string",
      "description": "Feature identifier (e.g., AUTH-001)",
      "pattern": "^[A-Z]+-[0-9]+$"
    },
    "feature_title": {
      "type": "string",
      "description": "Human-readable feature title"
    },
    "current_phase": {
      "type": "string",
      "enum": ["qa-test-gen", "designer", "readiness-gate", "developer", "qa-validation", "complete"],
      "description": "Current phase in the workflow"
    },
    "current_scenario": {
      "type": "integer",
      "description": "Current scenario number (1-indexed) within developer phase",
      "minimum": 1
    },
    "total_scenarios": {
      "type": "integer",
      "description": "Total number of scenarios to implement",
      "minimum": 1
    },
    "phases_completed": {
      "type": "object",
      "description": "Status of each phase",
      "properties": {
        "qa_test_gen": {
          "type": "object",
          "properties": {
            "completed": { "type": "boolean" },
            "completed_at": { "type": "string", "format": "date-time" },
            "scenarios_generated": { "type": "integer" },
            "handoff": { "type": "object" }
          }
        },
        "designer": {
          "type": "object",
          "properties": {
            "completed": { "type": "boolean" },
            "completed_at": { "type": "string", "format": "date-time" },
            "components_identified": { "type": "integer" },
            "handoff": { "type": "object" }
          }
        },
        "developer": {
          "type": "object",
          "properties": {
            "completed": { "type": "boolean" },
            "completed_at": { "type": "string", "format": "date-time" },
            "scenarios_completed": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "scenario_number": { "type": "integer" },
                  "name": { "type": "string" },
                  "completed_at": { "type": "string", "format": "date-time" }
                }
              }
            }
          }
        },
        "qa_validation": {
          "type": "object",
          "properties": {
            "completed": { "type": "boolean" },
            "completed_at": { "type": "string", "format": "date-time" },
            "quality_score": { "type": "number", "minimum": 0, "maximum": 5 }
          }
        }
      }
    },
    "files_modified": {
      "type": "array",
      "description": "List of files modified during implementation",
      "items": {
        "type": "object",
        "properties": {
          "path": { "type": "string" },
          "action": {
            "type": "string",
            "enum": ["created", "modified", "deleted"]
          },
          "phase": { "type": "string" }
        }
      }
    },
    "tests_status": {
      "type": "object",
      "description": "Current test status",
      "properties": {
        "unit": {
          "type": "object",
          "properties": {
            "total": { "type": "integer" },
            "passing": { "type": "integer" },
            "failing": { "type": "integer" }
          }
        },
        "integration": {
          "type": "object",
          "properties": {
            "total": { "type": "integer" },
            "passing": { "type": "integer" },
            "failing": { "type": "integer" }
          }
        },
        "e2e": {
          "type": "object",
          "properties": {
            "total": { "type": "integer" },
            "passing": { "type": "integer" },
            "failing": { "type": "integer" }
          }
        }
      }
    },
    "patterns_used": {
      "type": "array",
      "description": "Pattern IDs from index.json used in this feature",
      "items": { "type": "string" }
    },
    "blockers": {
      "type": "array",
      "description": "Current blockers or issues",
      "items": {
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "severity": {
            "type": "string",
            "enum": ["blocker", "warning", "note"]
          },
          "created_at": { "type": "string", "format": "date-time" }
        }
      }
    },
    "verification_records": {
      "type": "object",
      "description": "Paths to verification record files (proof of TDD)",
      "properties": {
        "qa_test_creation": {
          "type": "string",
          "description": "Path to qa-test-creation.json"
        },
        "qa_test_execution": {
          "type": "string",
          "description": "Path to qa-test-execution.json"
        },
        "dev_iterations": {
          "type": "array",
          "description": "Verification records for each developer scenario",
          "items": {
            "type": "object",
            "properties": {
              "scenario": { "type": "integer", "minimum": 1 },
              "pre_test": { "type": "string", "description": "Path to dev-scenario-N-pre.json" },
              "post_test": { "type": "string", "description": "Path to dev-scenario-N-post.json" }
            },
            "required": ["scenario", "pre_test", "post_test"]
          }
        },
        "qa_validation": {
          "type": "string",
          "description": "Path to qa-validation.json"
        }
      }
    },
    "pitfalls_checked": {
      "type": "array",
      "description": "Results of pitfall checks run during this feature",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "pattern": "^PIT-[0-9]+$" },
          "description": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["passed", "failed", "fixed", "skipped"]
          },
          "checked_at": { "type": "string", "format": "date-time" },
          "phase": {
            "type": "string",
            "enum": ["qa-test-gen", "developer", "qa-validation"]
          },
          "fix_details": {
            "type": "string",
            "description": "How the pitfall was fixed (if status is 'fixed')"
          }
        },
        "required": ["id", "status", "checked_at"]
      }
    },
    "practice_compliance_summary": {
      "type": "object",
      "description": "Summary of practice compliance checks",
      "properties": {
        "developer": {
          "type": "object",
          "description": "Developer practice compliance per scenario",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "passed": { "type": "integer", "minimum": 0 },
              "warnings": { "type": "integer", "minimum": 0 },
              "failed": { "type": "integer", "minimum": 0 },
              "checked_at": { "type": "string", "format": "date-time" }
            }
          }
        },
        "qa": {
          "type": "object",
          "description": "QA practice compliance",
          "properties": {
            "passed": { "type": "integer", "minimum": 0 },
            "warnings": { "type": "integer", "minimum": 0 },
            "failed": { "type": "integer", "minimum": 0 },
            "checked_at": { "type": "string", "format": "date-time" }
          }
        }
      }
    },
    "context_notes": {
      "type": "string",
      "description": "Free-form notes for context restoration"
    },
    "smart_resume": {
      "type": "object",
      "description": "Enhanced resume information for faster session restoration",
      "properties": {
        "last_file": {
          "type": "object",
          "description": "Last file being actively worked on",
          "properties": {
            "path": { "type": "string", "description": "Full path to the file" },
            "line_number": { "type": "integer", "description": "Last line being edited/reviewed" },
            "action": {
              "type": "string",
              "enum": ["creating", "modifying", "reviewing", "testing"],
              "description": "What was being done with the file"
            }
          }
        },
        "last_failing_test": {
          "type": "object",
          "description": "Details of the last failing test (for TDD resume)",
          "properties": {
            "file": { "type": "string", "description": "Test file path" },
            "test_name": { "type": "string", "description": "Specific test name/description" },
            "failure_message": { "type": "string", "description": "Error message (truncated)" },
            "line_number": { "type": "integer", "description": "Line where test failed" }
          }
        },
        "current_acceptance_criterion": {
          "type": "object",
          "description": "Specific acceptance criterion being worked on",
          "properties": {
            "scenario_name": { "type": "string", "description": "Scenario title" },
            "given": { "type": "string", "description": "Given clause" },
            "when": { "type": "string", "description": "When clause" },
            "then": { "type": "string", "description": "Then clause (current focus)" },
            "status": {
              "type": "string",
              "enum": ["not_started", "test_written", "implementing", "passing", "validating"],
              "description": "Progress on this criterion"
            }
          }
        },
        "pending_operations": {
          "type": "array",
          "description": "Operations that were in progress when session ended",
          "items": {
            "type": "object",
            "properties": {
              "operation": {
                "type": "string",
                "enum": ["write_test", "implement_code", "fix_test", "ui_validation", "run_checks"],
                "description": "Type of operation"
              },
              "target": { "type": "string", "description": "File or component being operated on" },
              "notes": { "type": "string", "description": "What needs to happen next" }
            }
          }
        },
        "resume_hints": {
          "type": "array",
          "description": "AI-generated hints for faster resume",
          "items": { "type": "string" }
        }
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "When checkpoint was first created"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "When checkpoint was last updated"
    },
    "session_id": {
      "type": "string",
      "description": "Claude session ID for reference"
    }
  },
  "example": {
    "feature_id": "AUTH-001",
    "feature_title": "User Login",
