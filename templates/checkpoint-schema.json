{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Vibe Feature Checkpoint",
  "description": "Persisted state for resuming feature implementation across sessions",
  "type": "object",
  "required": ["feature_id", "current_phase", "created_at", "updated_at"],
  "properties": {
    "feature_id": {
      "type": "string",
      "description": "Feature identifier (e.g., AUTH-001)",
      "pattern": "^[A-Z]+-[0-9]+$"
    },
    "feature_title": {
      "type": "string",
      "description": "Human-readable feature title"
    },
    "current_phase": {
      "type": "string",
      "enum": ["qa-test-gen", "designer", "readiness-gate", "developer", "qa-validation", "complete"],
      "description": "Current phase in the workflow"
    },
    "current_scenario": {
      "type": "integer",
      "description": "Current scenario number (1-indexed) within developer phase",
      "minimum": 1
    },
    "total_scenarios": {
      "type": "integer",
      "description": "Total number of scenarios to implement",
      "minimum": 1
    },
    "phases_completed": {
      "type": "object",
      "description": "Status of each phase",
      "properties": {
        "qa_test_gen": {
          "type": "object",
          "properties": {
            "completed": { "type": "boolean" },
            "completed_at": { "type": "string", "format": "date-time" },
            "scenarios_generated": { "type": "integer" },
            "handoff": { "type": "object" }
          }
        },
        "designer": {
          "type": "object",
          "properties": {
            "completed": { "type": "boolean" },
            "completed_at": { "type": "string", "format": "date-time" },
            "components_identified": { "type": "integer" },
            "handoff": { "type": "object" }
          }
        },
        "developer": {
          "type": "object",
          "properties": {
            "completed": { "type": "boolean" },
            "completed_at": { "type": "string", "format": "date-time" },
            "scenarios_completed": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "scenario_number": { "type": "integer" },
                  "name": { "type": "string" },
                  "completed_at": { "type": "string", "format": "date-time" }
                }
              }
            }
          }
        },
        "qa_validation": {
          "type": "object",
          "properties": {
            "completed": { "type": "boolean" },
            "completed_at": { "type": "string", "format": "date-time" },
            "quality_score": { "type": "number", "minimum": 0, "maximum": 5 }
          }
        }
      }
    },
    "files_modified": {
      "type": "array",
      "description": "List of files modified during implementation",
      "items": {
        "type": "object",
        "properties": {
          "path": { "type": "string" },
          "action": {
            "type": "string",
            "enum": ["created", "modified", "deleted"]
          },
          "phase": { "type": "string" }
        }
      }
    },
    "tests_status": {
      "type": "object",
      "description": "Current test status",
      "properties": {
        "unit": {
          "type": "object",
          "properties": {
            "total": { "type": "integer" },
            "passing": { "type": "integer" },
            "failing": { "type": "integer" }
          }
        },
        "integration": {
          "type": "object",
          "properties": {
            "total": { "type": "integer" },
            "passing": { "type": "integer" },
            "failing": { "type": "integer" }
          }
        },
        "e2e": {
          "type": "object",
          "properties": {
            "total": { "type": "integer" },
            "passing": { "type": "integer" },
            "failing": { "type": "integer" }
          }
        }
      }
    },
    "patterns_used": {
      "type": "array",
      "description": "Pattern IDs from index.json used in this feature",
      "items": { "type": "string" }
    },
    "blockers": {
      "type": "array",
      "description": "Current blockers or issues",
      "items": {
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "severity": {
            "type": "string",
            "enum": ["blocker", "warning", "note"]
          },
          "created_at": { "type": "string", "format": "date-time" }
        }
      }
    },
    "context_notes": {
      "type": "string",
      "description": "Free-form notes for context restoration"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "When checkpoint was first created"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "When checkpoint was last updated"
    },
    "session_id": {
      "type": "string",
      "description": "Claude session ID for reference"
    }
  },
  "example": {
    "feature_id": "AUTH-001",
    "feature_title": "User Login",
    "current_phase": "developer",
    "current_scenario": 2,
    "total_scenarios": 3,
    "phases_completed": {
      "qa_test_gen": {
        "completed": true,
        "completed_at": "2026-01-20T10:00:00Z",
        "scenarios_generated": 3,
        "handoff": {
          "feature_id": "AUTH-001",
          "scenarios": [],
          "ux_requirements": { "loading": true, "error": true, "empty": false, "success": true }
        }
      },
      "designer": {
        "completed": true,
        "completed_at": "2026-01-20T10:30:00Z",
        "components_identified": 2,
        "handoff": {
          "feature_id": "AUTH-001",
          "components": [{ "name": "LoginForm", "type": "new" }],
          "ui_states": ["loading", "error", "success"]
        }
      },
      "developer": {
        "completed": false,
        "scenarios_completed": [
          { "scenario_number": 1, "name": "User logs in with valid credentials", "completed_at": "2026-01-20T11:00:00Z" }
        ]
      }
    },
    "files_modified": [
      { "path": "lib/accounts/resources/user.ex", "action": "created", "phase": "developer" },
      { "path": "components/features/auth/LoginForm.svelte", "action": "created", "phase": "developer" }
    ],
    "tests_status": {
      "unit": { "total": 5, "passing": 4, "failing": 1 },
      "integration": { "total": 2, "passing": 1, "failing": 1 }
    },
    "patterns_used": ["async-result-extraction"],
    "blockers": [],
    "context_notes": "Working on scenario 2: invalid credentials handling",
    "created_at": "2026-01-20T09:30:00Z",
    "updated_at": "2026-01-20T11:15:00Z"
  }
}
